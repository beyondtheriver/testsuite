
<%= content_tag :div, class: 'post_to_comment' do -%>
<%= link_to @posts.user.username, user_path(@posts.user.id) %>
    <br>
<%= content_tag :div, class: 'post_to_comment_message' do -%>
<%= @posts.message %>
<%end -%>
<%end -%>
<%= content_tag :div, class: 'others_comments' do -%>
<% @posts.comments.each do |comment| %>
<%= content_tag :div, class: 'o_comment_comment' do -%>
<%= comment.comment %>
<%end -%>
<br>
<%= content_tag :div, class: 'username_comment' do -%>
<%= comment.user.username %>
<% end -%>
<%= comment.created_at.strftime("%H:%M:%S") %>
<br>
<% end %>
<% end -%>
<br>


<%= content_tag :div, class: 'comment_form' do -%>
<%= content_tag :div, class: 'comment_box' do -%>
<%= form_for @comment do |f| %>
<%=f.label :comment %>
<%= f.text_field :comment, :class => 'new_comment_comment', :placeholder => "Comment" %>
<%= f.hidden_field :post_id, :value => @posts.id %>
<br>
<%= Time.now.strftime("%H:%M:%S") %>
<br>

<br>
<%=f.submit :create, :class => 'new_comment_button', :value => "New Comment" %>
<% end %>
<% end -%>
<% end -%>




